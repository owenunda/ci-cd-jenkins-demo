pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'node-app'
        CONTAINER_NAME = 'node-app-container'
    }
    
    stages {
        stage('Verificar Código') {
            steps {
                echo 'Código descargado desde GitHub'
                echo "Rama: ${env.BRANCH_NAME ?: 'master'}"
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Construyendo imagen Docker...'
                sh 'docker build -t ${IMAGE_NAME}:latest .'
            }
        }
        
        stage('Detener Contenedor Anterior') {
            steps {
                echo 'Deteniendo contenedor anterior (si existe)...'
                sh 'docker stop ${CONTAINER_NAME} || true'
                sh 'docker rm ${CONTAINER_NAME} || true'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Desplegando nueva versión...'
                sh 'docker run -d --name ${CONTAINER_NAME} -p 3000:3000 ${IMAGE_NAME}:latest'
            }
        }
        
        stage('Verificar Deploy') {
            steps {
                echo 'Verificando que el contenedor esté corriendo...'
                sh 'docker ps | grep ${CONTAINER_NAME}'
            }
        }
    }
}
/*
pipeline: Todo va dentro de esto
agent any: Usar cualquier "máquina" disponible (en este caso, Jenkins)
stages: Los pasos del pipeline
stage: Cada paso individual (tiene un nombre)
steps: Las acciones dentro de cada paso
sh: Ejecutar comando de terminal (sh = shell)
*/